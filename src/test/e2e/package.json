{
  "name": "e2e-tests",
  "version": "1.0.0",
  "description": "Playwright E2E tests for ToDo Application",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "report": "playwright show-report ./output/reports/html-report",
    "codegen": "playwright codegen http://localhost:8080",
    "extract-spec": "npx ts-node scripts/extract-screen-spec.ts",
    "extract-spec:all": "npx ts-node scripts/extract-screen-spec.ts --all"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "vue"
  ],
  "author": "",
  "license": "ISC"
}
