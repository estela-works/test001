<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.ProjectMapper">

    <!-- Q-P01: 全件取得（作成日時降順） -->
    <select id="selectAll" resultType="com.example.demo.Project">
        SELECT
            ID,
            NAME,
            DESCRIPTION,
            CREATED_AT
        FROM
            PROJECT
        ORDER BY
            CREATED_AT DESC
    </select>

    <!-- Q-P02: ID指定取得 -->
    <select id="selectById" resultType="com.example.demo.Project">
        SELECT
            ID,
            NAME,
            DESCRIPTION,
            CREATED_AT
        FROM
            PROJECT
        WHERE
            ID = #{id}
    </select>

    <!-- Q-P03: 新規作成 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO PROJECT (
            NAME,
            DESCRIPTION,
            CREATED_AT
        ) VALUES (
            #{name},
            #{description},
            #{createdAt}
        )
    </insert>

    <!-- Q-P04: 更新 -->
    <update id="update">
        UPDATE PROJECT
        SET
            NAME = #{name},
            DESCRIPTION = #{description}
        WHERE
            ID = #{id}
    </update>

    <!-- Q-P05: ID指定削除 -->
    <delete id="deleteById">
        DELETE FROM PROJECT
        WHERE ID = #{id}
    </delete>

</mapper>
